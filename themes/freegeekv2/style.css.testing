/** MENU **/
#nav ul, #nav li {
display: inline;
padding: 0px 10px;
}
#nav {
background-image: url('images/mainmenu_bg.gif');
line-height: 1.8em;
font-size: 12px;
font-weight: bold;
font-family: Arial;
color: white;
height:20px;
width: 100%;
text-align:center;
background-repeat:repeat-x;
display:block;
}
#subnav ul, #subnav li {
display: inline;
padding: 0px 10px;
}

#subnav {
background-image: url('images/submenu_bg.gif');
font-size: 12px;
font-weight: bold;
font-family: Arial;
line-height: 1.8em;
height: 20px;
width: 100%;
display: none;
text-align:center;
}
#nav a:link, #nav a:visited {
color: white;
text-decoration: none;
}
#subnav a:link, #subnav a:visited {
color: #000099;
text-decoration: none;
}
#home_s, #about_s, #donate_s, #connect_s, #community_s, #resources_s, #contact_s {
display: none;
}

