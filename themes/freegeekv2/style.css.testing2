/*  Html Elements
-----------------------------------------*/
	body {
		position:relative; /* just in case */
		font-size: 63%; /* Resets 1em to 10px */
		font-family: 'Lucida Grande', Verdana, Arial, Sans-Serif;
		background:#cee4ef;
		color: #3b4337;
		text-align: center;/* This is reset in the style declaration for #wrap */
		}
	.indentleft{
		padding-left:2.8em;
		}
	/* Root Font Sizes */
		h1{ font-size:2.4em; color:#c72e31; }
			h1 span.edit{font-size:.5em;font-weight:normal;color:#000;}
		h2{ font-size:2.0em; color:#3b4337; }
			li h2{ font-size: 1.50em;}
		h3{ font-size:1.8em; color:#3b4337;font-style:italic; }
			li h3{ font-size: 1.33em; }
		h4{ font-size:1.6em; color:#3b4337; }
			li h4{ font-size: 1.17em; }
		h5{ font-size:1.4em; color:#3b4337; }
			li h5{ font-size: 1.0em; }
		h6{ font-size:1.2em; color:#3b4337; }
			li h6{ font-size: .83em; }
		
		p,li,td,dd,dt,blockquote,code,samp,kbd,tt,
		.section { font-size:1.2em; }
		pre{ font-size:1.5em; }
		big{font-size:1.5em;}
		small{ font-size:.8em; }
		
	/* Nested Font Sizes */
		li li,
		li p,
		blockquote p, 
		p code, p samp, p kbd, p tt,
		blockquote blockquote,
		pre code{ font-size:1em }
		
	/* Font Colors & Styles */

		b,h1,h2,h3,h4,h5,h6,label,th,strong,dt{
			font-weight:bold;
			}
		p,li,td,dd,dt,code,blockquote{
			color:#444;
			line-height:1.75em;
			}
		td, th{
			vertical-align:top;
			}
		address{
			font-style:normal;
			}
			
	/* Structure */
		h1,h2,h3,h4,h5,h6,p,blockquote,pre,table,fieldset,textarea{
			padding:0;
			margin-top:0;
			margin-bottom:7px;
			}
		h2,h3,h4,h5,h6{
			margin-top:14px;
			}
		li h2,li h3,li h4,li h5,li h6{
			margin-bottom:0;
			padding-bottom:0;
			}
		ul,ol{
			padding:0;
			margin:1em 0 1em 3.5em;
			}
		img{
			border-width:0;
			}
		th{
			padding:1.7em 0 1em 0;
			}
		th.first{
			padding-top:0;
			}
		ul{
			list-style-image: url(images/bullet.gif);
			list-style-position:outside;
			}
		li li,
		li dt, li dd, 
		blockquote blockquote{ font-size:1em }

	
